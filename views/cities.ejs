<h1>List of Cities</h1>
    <div class="overflow-x-auto">
        <table class="mb-6 min-w-full border-collapse border border-gray-300">
            <thead>
                <tr class="bg-yellow-100">
                    <th class="border border-pink-300 px-4 py-2">City</th>
                    <th class="border border-pink-300 px-4 py-2">Actions</th> <!-- New column for actions -->
                </tr>
            </thead>
            <tbody>
                <% cities.forEach(city => { %>
                    <tr class="border-b border-gray-300">
                        <td class="border border-pink-300 px-4 py-2"><%= city.name %></td>
                        <td class="border border-pink-300 px-4 py-2">
                            <!-- Edit City Button -->
                            <a href="/cities/<%= city.id %>/edit">
                                <button class="bg-indigo-500 text-white px-4 py-2 rounded-md hover:bg-indigo-600 focus:outline-none focus:bg-indigo-600">
                                    Edit
                                </button>
                            </a>
                           
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <div class="flex justify-end">
        <a href="/cities" class="">
            <button class=" inline-flex px-5 py-3 text-white bg-blue-500 hover:text-blue-700 focus:text-blue-700 hover:bg-blue-100 focus:bg-blue-100 border border-blue-600 rounded-md mb-3">
                <svg aria-hidden="true" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="flex-shrink-0 h-6 w-6 text-white -ml-1 mr-2">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                Add Cities
            </button>
        </a>
    </div>
    
   