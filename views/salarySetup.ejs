<div class="container mx-auto px-4 py-8">
    <!-- Form to add new salary -->
    <form method="POST" action="/addSalary" class="mb-8">
        <div class="mb-4">
            <label for="employeeName" class="block">Employee Name:</label>
            <select id="employeeName" name="employeeName" required class="block w-full px-3 py-2 border rounded-md">
                <% employees.forEach(employee => { %>
                    <option value="<%= employee.fullName %>"><%= employee.fullName %></option>
                <% }); %>
            </select>
        </div>
        <div class="mb-4">
            <label for="salary" class="block">Base Salary:</label>
            <input type="number" id="salary" name="salary" required class="block w-full px-3 py-2 border rounded-md">
        </div>
        <div class="mb-4">
            <label for="bonus" class="block">Bonus:</label>
            <input type="number" id="bonus" name="bonus" class="block w-full px-3 py-2 border rounded-md">
        </div>
        <div class="mb-4">
            <label for="deductions" class="block">Deductions:</label>
            <input type="number" id="deductions" name="deductions" class="block w-full px-3 py-2 border rounded-md">
        </div>
        <div class="mb-4">
            <label for="taxes" class="block">Taxes:</label>
            <input type="number" id="taxes" name="taxes" class="block w-full px-3 py-2 border rounded-md">
        </div>
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Add Salary</button>
    </form>

    <hr class="mb-8">

    <!-- Form to edit existing salary -->
    <h2 class="text-lg font-bold mb-4">Edit Salary</h2>
    <form method="POST" action="/editSalary">
        <div class="mb-4">
            <label for="employeeNameEdit" class="block">Employee Name:</label>
            <select id="employeeNameEdit" name="employeeName" required class="block w-full px-3 py-2 border rounded-md">
                <% employees.forEach(employee => { %>
                    <option value="<%= employee.fullName %>"><%= employee.fullName %></option>
                <% }); %>
            </select>
        </div>
        <div class="mb-4">
            <label for="newSalary" class="block">New Base Salary:</label>
            <input type="number" id="newSalary" name="newSalary" required class="block w-full px-3 py-2 border rounded-md">
        </div>
        <div class="mb-4">
            <label for="newBonus" class="block">New Bonus:</label>
            <input type="number" id="newBonus" name="newBonus" class="block w-full px-3 py-2 border rounded-md">
        </div>
        <div class="mb-4">
            <label for="newDeductions" class="block">New Deductions:</label>
            <input type="number" id="newDeductions" name="newDeductions" class="block w-full px-3 py-2 border rounded-md">
        </div>
        <div class="mb-4">
            <label for="newTaxes" class="block">New Taxes:</label>
            <input type="number" id="newTaxes" name="newTaxes" class="block w-full px-3 py-2 border rounded-md">
        </div>
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Update Salary</button>
    </form>
</div>
