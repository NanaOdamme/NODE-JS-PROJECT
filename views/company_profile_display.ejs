<body class="bg-gray-100">
    <div class="max-w-2xl mx-auto p-6">
        <h1 class="text-2xl font-bold mb-4">All Company Profiles</h1>
        <div class="grid grid-cols-1 gap-4">
            <% companyProfiles.forEach(company => { %>
                <div class="bg-white shadow-md rounded-md p-4">
                    <h2 class="text-lg font-bold mb-2"><%= company.company_name %></h2>
                    <p><strong>Business Type/Industry:</strong> <%= company.business_type %></p>
                    <p><strong>Year Established:</strong> <%= company.year_established %></p>
                    <!-- Add more details as needed -->
                </div>
            <% }); %>
        </div>
    </div>