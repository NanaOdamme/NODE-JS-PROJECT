
    <style>
        input,
        select{
            padding: 10px;
            border-radius: 10px;
        }
    </style>
    <div class="container bg-yellow-100 rounded-lg shadow-lg p-5 mx-6 ">
        <h1 class="text-2xl font-bold mb-4">Add Company Profile</h1>
        <form action="/api/company-profile" method="POST" enctype="multipart/form-data" class="max-w-lg mx-auto">
            <div class="mb-4">
                <label for="company_name" class="block font-medium">Company Name:</label>
                <input type="text" id="company_name" name="company_name" required class="form-input mt-1 block w-full">
            </div>

            <div class="mb-4">
                <label for="country" class="block font-medium">Country:</label>
                <select id="country" name="country_id" required class="form-select mt-1 block w-full">
                    <!-- Populate country options dynamically -->
                    <% countries.forEach(country => { %>
                        <option value="<%= country.id %>"><%= country.name %></option>
                    <% }); %>
                </select>
            </div>

            <div class="mb-4">
                <label for="city" class="block font-medium">City:</label>
                <select id="city" name="city_id" required class="form-select mt-1 block w-full">
                    <!-- Populate city options dynamically based on selected country -->
                    <% cities.forEach(city => { %>
                        <option value="<%= city.id %>"><%= city.name %></option>
                    <% }); %>
                </select>
            </div>

            <div class="mb-4">
                <label for="business_type" class="block font-medium">Business Type/Industry:</label>
                <input type="text" id="business_type" name="business_type" required class="form-input mt-1 block w-full">
            </div>

            <div class="mb-4">
                <label for="year_established" class="block font-medium">Year Established:</label>
                <input type="number" id="year_established" name="year_established" required class="form-input mt-1 block w-full">
            </div>

            <div class="mb-4">
                <label for="legal_structure" class="block font-medium">Legal Structure:</label>
                <input type="text" id="legal_structure" name="legal_structure" required class="form-input mt-1 block w-full">
            </div>
            
            <div class="mb-4">
                <label for="founders_owners" class="block font-medium">Founder(s)/Owner(s):</label>
                <input type="text" id="founders_owners" name="founders_owners" required class="form-input mt-1 block w-full">
            </div>
            
            <div class="mb-4">
                <label for="company_size" class="block font-medium">Company Size (Number of Employees):</label>
                <input type="number" id="company_size" name="company_size" required class="form-input mt-1 block w-full">
            </div>
            
            <div class="mb-4">
                <label for="headquarters_location" class="block font-medium">Headquarters Location:</label>
                <input type="text" id="headquarters_location" name="headquarters_location" required class="form-input mt-1 block w-full">
            </div>
            
            <div class="mb-4">
                <label for="branches_locations" class="block font-medium">Branches/Offices Locations:</label>
                <textarea id="branches_locations" name="branches_locations" required class="form-textarea mt-1 block w-full"></textarea>
            </div>
            
            <div class="mb-4">
                <label for="contact_phone" class="block font-medium">Contact Phone:</label>
                <input type="tel" id="contact_phone" name="contact_phone" required class="form-input mt-1 block w-full">
            </div>
            
            <div class="mb-4">
                <label for="contact_email" class="block font-medium">Contact Email:</label>
                <input type="email" id="contact_email" name="contact_email" required class="form-input mt-1 block w-full">
            </div>
            
            <div class="mb-4">
                <label for="website" class="block font-medium">Website:</label>
                <input type="url" id="website" name="website" required class="form-input mt-1 block w-full">
            </div>
            
            <div class="mb-4">
                <label for="linkedin" class="block font-medium">LinkedIn Profile:</label>
                <input type="url" id="linkedin" name="linkedin" class="form-input mt-1 block w-full">
            </div>
            
            <div class="mb-4">
                <label for="facebook" class="block font-medium">Facebook Profile:</label>
                <input type="url" id="facebook" name="facebook" class="form-input mt-1 block w-full">
            </div>
            
            <div class="mb-4">
                <label for="twitter" class="block font-medium">Twitter Profile:</label>
                <input type="url" id="twitter" name="twitter" class="form-input mt-1 block w-full">
            </div>
            

            <div class="mb-4">
                <label for="annual_revenue" class="block font-medium">Annual Revenue/Financial Information:</label>
                <input type="number" id="annual_revenue" name="annual_revenue" step="0.01" required class="form-input mt-1 block w-full">
            </div>

            <div class="mb-4">
                <label for="profile_picture" class="block font-medium">Profile Picture:</label>
                <input type="file" id="profile_picture" name="profile_picture" class="form-input mt-1 block w-full">
            </div>

            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Submit</button>
        </form>
